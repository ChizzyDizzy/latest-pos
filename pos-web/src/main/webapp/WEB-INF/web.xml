<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>SYOS POS Web Application</display-name>
    <description>Multi-threaded POS system with MVC architecture</description>

    <!-- Application Initialization Listener -->
    <listener>
        <listener-class>com.syos.web.listeners.AppContextListener</listener-class>
    </listener>

    <!-- Session Configuration (30 minutes timeout) -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Set to true in production with HTTPS -->
        </cookie-config>
        <tracking-mode>COOKIE</tracking-mode>
    </session-config>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.syos.web.filters.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard/*</url-pattern>
        <url-pattern>/sales/*</url-pattern>
        <url-pattern>/inventory/*</url-pattern>
        <url-pattern>/reports/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>

    <!-- CORS and Security Headers Filter -->
    <filter>
        <filter-name>SecurityHeadersFilter</filter-name>
        <filter-class>com.syos.web.filters.SecurityHeadersFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SecurityHeadersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Login/Authentication Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.syos.web.controllers.LoginServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.syos.web.controllers.DashboardServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>

    <!-- Sales Controller Servlet -->
    <servlet>
        <servlet-name>SalesServlet</servlet-name>
        <servlet-class>com.syos.web.controllers.SalesServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>SalesServlet</servlet-name>
        <url-pattern>/sales/*</url-pattern>
    </servlet-mapping>

    <!-- Inventory Controller Servlet -->
    <servlet>
        <servlet-name>InventoryServlet</servlet-name>
        <servlet-class>com.syos.web.controllers.InventoryServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>InventoryServlet</servlet-name>
        <url-pattern>/inventory/*</url-pattern>
    </servlet-mapping>

    <!-- Reports Controller Servlet -->
    <servlet>
        <servlet-name>ReportsServlet</servlet-name>
        <servlet-class>com.syos.web.controllers.ReportsServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReportsServlet</servlet-name>
        <url-pattern>/reports/*</url-pattern>
    </servlet-mapping>

    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.syos.web.controllers.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Welcome File -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>

    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>

    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/WEB-INF/views/error/error.jsp</location>
    </error-page>

    <!-- Security Constraints (optional) -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Area</web-resource-name>
            <url-pattern>/dashboard/*</url-pattern>
            <url-pattern>/sales/*</url-pattern>
            <url-pattern>/inventory/*</url-pattern>
            <url-pattern>/reports/*</url-pattern>
        </web-resource-collection>
        <!-- This will be handled by AuthenticationFilter -->
    </security-constraint>

</web-app>
